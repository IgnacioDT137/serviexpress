<%- include('partials/_header') -%>
<%- include('partials/_barra') -%>

<div class="container">
  <table class="table table-dark table-bordered mt-4">
    <thead>
      <tr>
        <th scope="col">ID</th>
        <th scope="col">Nombre</th>
        <th scope="col">Valor</th>
        <th scope="col">Stock</th>
        <th scope="col">Cantidad a ordenar</th>
        <th scope="col">Acciones</th>
      </tr>
    </thead>
    <tbody>
      <% data.map(pro => { %>
        <tr>
          <td><%- pro.id_producto -%></td>
          <td><%- pro.nombre -%></td>
          <td><%- pro.valor -%></td>
          <td><%- pro.stock -%></td>
          <form action="/pedirProducto/<%- pro.id_producto -%>" method="post">
            <td><input type="number" name="cantidad" id="cantidad" class="form-control" required min="1"></td>
            <td><button type="submit" class="btn btn-success">Registrar pedido</button></td>
          </form>
        </tr>
      <% } ) %>
    </tbody>
  </table>
</div>

<%- include('partials/_footer') -%>